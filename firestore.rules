rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /gamesMulti/{roomCode} {
      allow read, write: if true;
    }
    
    match /users/{userId} {
      allow read, write: if true; // Open access (for testing only)
    }

    match /games/{gameId} {
      allow read, write: if true; // Open access (for testing only)
    }

    match /rooms/{roomId} {
      allow read, write: if true; // Open access (for testing only)
    }

  }
}

